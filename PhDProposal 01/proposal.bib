keywords = {Biogeochemical model,Complexity,Ecosystem model,Eutrophication model,MIMO,Phytoplankton model,Water quality model},
mendeley-groups = {Esteban/ModelComplexity,PhD Proposal BibTex/cited},
pages = {77--87},
publisher = {Elsevier B.V.},
title = {{75 years since Monod: It is time to increase the complexity of our predictive ecosystem models (opinion)}},
url = {http://dx.doi.org/10.1016/j.ecolmodel.2016.12.001},
