doi = {10.1016/j.dsr.2015.03.004},
file = {:Users/bp/Documents/Mendeley Desktop/Phytoplankton{\_}community{\_}structure{\_}and{\_}de.pdf:pdf},
isbn = {0967-0637},
issn = {09670637},
journal = {Deep-Sea Research Part I: Oceanographic Research Papers},
keywords = {Caribbean Sea,ChemTax,Climate change,Diversity index,HPLC,Phytoplankton community},
mendeley-groups = {CARIACO,PhD Proposal BibTex/Section 2},
