keywords = {Active learning,Big Data,Computer programming,Data science,Education,R software,Sensordata,Teaching modules},
number = {3},
pages = {7744--7751},
publisher = {Wiley Online Library},
title = {{Power, pitfalls, and potential for integrating computational literacy into undergraduate ecology courses}},
volume = {17},
year = {2018}
